  <div class="formbold-form-wrapper">
    
    <form action="/edit-user/<%= users._id %>?_method=PATCH" method="POST">
      <div class="formbold-input-flex">
        <div>
          <label for="fullname" class="formbold-form-label"> Fullname </label>
          <input
            type="text"
            name="fullname"
            id="fullname"
            value="<%= users.fullname %>"
            class="formbold-form-input"
          />
        </div>

        <div>
          <label for="title" class="formbold-form-label"> Username </label>
          <input
            type="text"
            name="username"
            id="username"
            value="<%= users.username %>"
            class="formbold-form-input"
          />
        </div>

      </div>

      

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="email" class="formbold-form-label"> Email: </label>
        <div>
          <input
            type="email"
            name="email"
            id="email"
            value="<%= users.email %>"
            class="formbold-form-input"
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="phone" class="formbold-form-label"> Phone Number: </label>
        <div>
          <input
            type="text"
            name="phone"
            id="phone"
            value="<%= users.phone %>"
            class="formbold-form-input"
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="createdAt" class="formbold-form-label"> Created At: </label>
        <div>
          <input
            type="text"
            name="createdAt"
            id="createdAt"
            value="<%= users.createdAt %>"
            class="formbold-form-input"
            readonly
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">
        <label for="password" class="formbold-form-label"> Password: </label>
        <div>
          <input
            type="text"
            name="password"
            id="password"
            value="<%= users.password %>"
            class="formbold-form-input"
            readonly
          />
        </div>
      </div>

      <div class="formbold-mb-3 formbold-input-wrapp">

      <div class="formbold-input-flex">
        <div>
          <label for="status" class="formbold-form-label"> Status: </label>
          <div>
            <select id="status" class="formbold-form-input" name="status">
            <option value="" disabled selected hidden>Select Status</option>
              <option value="active">Active</option>
              <option value="inactive">Inactive</option>
          </select>
          </div>
        </div>

        <div>
          <label for="role" class="formbold-form-label"> Role: </label>
          <div>
            <select id="role" class="formbold-form-input" name="role">
            <option value="" disabled selected hidden>Select Role</option>
              <option value="user">User</option>
              <option value="admin">Admin</option>
          </select>
          </div>
        </div>
      </div>

      <div class="formbold-input-flex">
        <div>
          <label for="sudo" class="formbold-form-label"> Sudo: </label>
          <select id="sudo" class="formbold-form-input" name="sudo">
            <option value="" disabled selected hidden>Select Options</option>
            <option value="false">False</option>
            <option value="true">True</option>
        </select>
        </div>

        <div>
          <label for="accountant" class="formbold-form-label"> Accountant: </label>
          <select id="accountant" class="formbold-form-input" name="accountant">
            <option value="" disabled selected hidden>Select Options</option>
            <option value="false">False</option>
            <option value="true">True</option>
        </select>
        </div>
      </div>
      <div class="formbold-input-flex">
        <div>
          <label for="manager" class="formbold-form-label">General Manager: </label>
          <select id="manager" class="formbold-form-input" name="manager">
            <option value="" disabled selected hidden>Select Options</option>
            <option value="false">False</option>
            <option value="true">True</option>
        </select>
        </div>
      </div>
    </div>


