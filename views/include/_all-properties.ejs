      <section class="property" id="property">
        <div class="container">

          <p class="section-subtitle">Properties</p>

          <h2 class="h2 section-title">Featured Listings</h2>

          <ul class="property-list has-scrollbar">

            <li>
              <div class="property-card">
                <figure class="card-banner">
                  <!-- Dynamic image source -->
                  <a href="#">
                    <img src="<%= apartments.photo %>" alt="<%= apartments.title %>" class="w-100">
                  </a>
                  <!-- Dynamic badge indicating status (e.g., For Rent, For Sale) -->
                  <div class="card-badge green"><%= apartments.status %></div>
                  <div class="banner-actions">
                    <!-- Button with location information -->
                    <button class="banner-actions-btn">
                      <ion-icon name="location"></ion-icon>
                      <address><%= apartments.location %></address>
                    </button>
                    <!-- Button with number of bedrooms -->
                    <button class="banner-actions-btn">
                      <ion-icon name="bed-outline"></ion-icon>
                      <span><%= apartments.bedrooms %></span>
                    </button>
                    <!-- Button with number of bathrooms -->
                    <button class="banner-actions-btn">
                      <ion-icon name="man-outline"></ion-icon>
                      <span><%= apartments.bathrooms %></span>
                    </button>
                  </div>
                </figure>
                <div class="card-content">
                  <!-- Dynamic price -->
                  <div class="card-price">
                    <strong><%= apartments.price %></strong>/Month
                  </div>
                  <!-- Dynamic title -->
                  <h3 class="h3 card-title">
                    <a href="#"><%= apartments.title %></a>
                  </h3>
                  <!-- Dynamic description -->
                  <p class="card-text">
                    <%= apartments.description %>
                  </p>
                  <ul class="card-list">
                    <!-- Placeholder for square footage -->
                    <li class="card-item">
                      <strong>3450</strong>
                      <ion-icon name="square-outline"></ion-icon>
                      <span>Square Ft</span>
                    </li>
                  </ul>
                </div>
                <div class="card-footer">
                  <div class="card-author">
                    <figure class="author-avatar">
                      <!-- Dynamic user photo -->
                      <% if (user.photo) { %>
                        <img src="<%= relativePath %>" alt="profile" />
                      <% } else { %>
                        <!-- Default image placeholder if photo doesn't exist -->
                        <img src="/path/to/default/image.jpg" alt="profile" />
                      <% } %>
                    </figure>
                    <div>
                      <!-- Dynamic user fullname -->
                      <p class="author-name">
                        <a href="#"><%= user.fullname %></a>
                      </p>
                      <!-- Dynamic user bio -->
                      <p class="author-title"><%= user.bio %></p>
                    </div>
                  </div>
                  <div class="card-footer-actions">
                    <!-- Action buttons (placeholders) -->
                    <button class="card-footer-actions-btn">
                      <ion-icon name="resize-outline"></ion-icon>
                    </button>
                    <button class="card-footer-actions-btn">
                      <ion-icon name="heart-outline"></ion-icon>
                    </button>
                    <button class="card-footer-actions-btn">
                      <ion-icon name="add-circle-outline"></ion-icon>
                    </button>
                  </div>
                </div>
              </div>
            </li>
            


