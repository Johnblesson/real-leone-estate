}

.success-message h1 {
    color: hsl(9, 100%, 62%);
}

.add-another-reception {
    text-align: center;
}

.add-another-reception a {
    display: inline-block;
    padding: 10px 20px;
    background-color: hsl(9, 100%, 62%);
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.add-another-reception a:hover {
    background-color: hsl(9, 91%, 57%);
